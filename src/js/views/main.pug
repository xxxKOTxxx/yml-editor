#accordion.panel-group.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3

  .panel.panel-default.active
    .panel-heading
      .panel-title
        a#file-link(
          data-toggle='collapse'
          data-parent='#accordion'
          href='#file-uploader'
        )
          i.glyphicon.glyphicon-open-file
          span(ng-bind="('steps.step' | translate) + ' 1: ' + ('steps.1' | translate)")
    #file-uploader.panel-collapse.collapse.in
      .panel-body
        file(
          file="main.file"
          data="main.data"
        )

  .panel.panel-default(ng-show="main.data")
    .panel-heading
      .panel-title
        a#settings-link(
          data-toggle='collapse'
          data-parent='#accordion'
          href='#settings'
        )
          i.glyphicon.glyphicon-edit
          span(ng-bind="('steps.step' | translate) + ' 2: ' + ('steps.2' | translate)")
    #settings.panel-collapse.collapse
      .panel-body
        settings(
          data="main.data"
          ready="main.ready"
        )

  .panel.panel-default(ng-show="main.ready")
    .panel-heading
      .panel-title
        a#process-link(
          data-toggle='collapse'
          data-parent='#accordion'
          href='#result'
        )
          i.glyphicon.glyphicon-cog
          span(ng-bind="('steps.step' | translate) + ' 3: ' + ('steps.3' | translate)")
    #result.panel-collapse.collapse
      .panel-body
        process(
          data="main.data"
        )