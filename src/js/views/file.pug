.file-uploader 
  .alert.alert-danger(
    ng-repeat="error in errors"
    ng-if="!error.valid"
  )
    button.close(
      type="button"
      ng-click="hideError(error)"
    ) &times;
    p(
      translate="{{error.message}}"
      translate-values="{max_file_size: file.settings.max_file_size}"
    )
    
  file-drop(file="file.file")
  file-input(file="file.file")
  file-data(
    file="file.file"
    data="file.data"
  )